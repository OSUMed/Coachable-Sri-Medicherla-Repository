class Solution:
    def removeDuplicates(self, s: str, k: int) -> str:
        stack = []
        for c in s:
            # First we check if character is in stack[-1]: if so update, else add it
            if stack and stack[-1][0] == c:
                stack[-1][1] += 1
            else:
                stack.append([c, 1])

            # If character's occurances is k, pop it from the stack:
            if stack[-1][1] == k:
                stack.pop()

        # recreate the answer string using our remaining stack:
        uniqueStr = []
        for char, num in stack:
            uniqueStr.append(char * num)

        return "".join(uniqueStr)
